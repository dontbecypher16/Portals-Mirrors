
  <!--<div class="row">-->
    <div class="col-md-8 offset-md-2">
        {{#with post}}
      <form action="/edit/{{this._id}}?_method=PUT" method="POST">
      <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Username</label>
            <input type="text" name="username" value="{{this.username}}" placeholder="Username" class="form-control">
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Title</label>
            <input type="text" name="title" value="{{this.title}}" placeholder="Title" class="form-control">
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Description</label>
            <input type="text" name="description" value="{{this.description}}" placeholder="Description" class="form-control">
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Category</label>
            <input type="text" name="category" value="{{this.category}}" placeholder="Category" class="form-control">
          </div>
        </div>
        <div class="control-group">
          <div class="form-group floating-label-form-group controls">
            <label>Content</label>
            <textarea name="content"  placeholder="Content ..." cols="30" rows="10" class="form-control">{{this.content}}</textarea>
          </div>
        </div>
        <div class="form-group my-4 text-center">
          <button type="submit" class="btn btn-primary">Edit Post</button>
        </div>
      </form>
      {{/with}}
    </div>